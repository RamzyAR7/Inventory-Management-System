@model IEnumerable<IMS.DAL.Entities.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0 d-flex align-items-center" style="color: #608fc8; font-size: 1.5rem;">
                <i class="bi bi-people-fill me-2" style="font-size: 1.5rem;"></i> Suppliers Management
            </h3>





            <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-semibold">
                <i class="align-middle me-2" data-feather="plus"></i> Create New
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="text-success small fw-semibold mb-3">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="text-danger small fw-semibold mb-3">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive rounded-3 overflow-hidden">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr style="color: #6c707de6;">
                        <th>@Html.DisplayNameFor(model => model.SupplierName)</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-5">
                                <i data-feather="user-x" class="mb-2" style="width: 32px; height: 32px;"></i><br />
                                No suppliers found. Please create a new supplier.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.SupplierName</td>
                                <td>@supplier.PhoneNumber</td>
                                <td>@supplier.Email</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@supplier.SupplierID"
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3 fw-semibold d-flex align-items-center gap-1"
                                           title="View Details">
                                            <i data-feather="eye"></i> View
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@supplier.SupplierID"
                                           class="btn btn-outline-warning btn-sm rounded-pill px-3 fw-semibold d-flex align-items-center gap-1"
                                           title="Edit Supplier">
                                            <i data-feather="edit"></i> Edit
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@supplier.SupplierID"
                                           class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-semibold d-flex align-items-center gap-1"
                                           title="Delete Supplier"
                                           onclick="return confirm('Are you sure you want to delete this supplier?');">
                                            <i data-feather="trash-2"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
