@model IMS.BLL.DTOs.Category.CategoryReqDto

@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 600px; margin: 0 auto;">
        <h3 class="fw-semibold mb-4 text-primary">
            
            <i data-feather="plus-circle" class="me-1" style="width: 24px; height: 24px;"></i> Create New Category
        </h3>

        @* Validation Errors *@
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="text-danger small fw-semibold mb-3">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control rounded-3" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control rounded-3" placeholder="Enter description (optional)" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="save"></i> Create Category
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="x"></i> Cancel
                </a>
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
