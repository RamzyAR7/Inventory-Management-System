@model IMS.BLL.DTOs.Category.CategoryResDto

@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 700px; margin: 0 auto;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0 text-primary">
                <i data-feather="info" class="me-2" style="width: 22px; height: 22px;"></i> Category Details
            </h3>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                <i data-feather="arrow-left" class="me-1"></i> Back to List
            </a>
        </div>


        <dl class="row mb-0">
            <dt class="col-sm-4 text-muted">Category Name</dt>
            <dd class="col-sm-8 fw-semibold">@Model.CategoryName</dd>

            <dt class="col-sm-4 text-muted">Description</dt>
            <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "N/A")</dd>
        </dl>

        @if (Model.Products != null && Model.Products.Any())
        {
            <hr class="my-4" />
            <h5 class="fw-semibold mb-3">Products in this Category</h5>
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr class="table-light">
                            <th>Product Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-warning rounded-pill px-4 fw-semibold">
                <i class="align-middle me-1" data-feather="edit"></i> Edit
            </a>
            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
