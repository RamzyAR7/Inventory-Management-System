@model IEnumerable<IMS.BAL.DTOs.Category.CategoryResDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0 d-flex align-items-center text-primary " style=" font-size: 1.5rem;">
                <i class="bi bi-tags-fill me-2" style="font-size: 1.6rem;"></i> Category Management
            </h3>


            <div class="d-flex gap-2">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 fw-semibold">
                    <i class="bi bi-box-seam me-2"></i> Inventory

                </a>
                <a asp-action="Create" class="btn btn-primary rounded-pill px-4 fw-semibold">
                    <i class="fas fa-plus me-2"></i> Create New
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="text-success small fw-semibold mb-3">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="table-responsive rounded-3 overflow-hidden">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr style="color: #6c707de6;">
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Products Count</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@(item.Description ?? "N/A")</td>
                            <td>
                                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-1 rounded-pill">
                                    @(item.Products?.Count ?? 0)
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.CategoryID"
                                       class="btn btn-outline-info btn-sm rounded-pill fw-semibold d-flex align-items-center gap-1">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryID"
                                       class="btn btn-outline-warning btn-sm rounded-pill fw-semibold d-flex align-items-center gap-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryID"
                                       class="btn btn-outline-danger btn-sm rounded-pill fw-semibold d-flex align-items-center gap-1">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
