@using IMS.Domain
@using IMS.Domain.Entities
@model Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 700px; margin: 0 auto;">
        @if (Model == null)
        {
            <div class="alert alert-danger small rounded-3 py-2 px-3" role="alert">
                Customer not found or an error occurred.
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                <i class="align-middle me-1" data-feather="x"></i> Back to List
            </a>
        }
        else
        {
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-semibold mb-0 text-danger">
                    <i data-feather="trash-2" class="me-2" style="width: 22px; height: 22px;"></i> Delete Customer
                </h3>
            </div>

            <div class="alert small rounded-3 py-2 px-3 mb-4" style="background-color: #ffe5e5; color: #dc3545;" role="alert">
                <div class="d-flex align-items-center">
                    <i class="align-middle me-2" data-feather="alert-triangle"></i>
                    <div>
                        <strong>Warning:</strong> Are you sure you want to delete this customer? This action cannot be undone.
                    </div>
                </div>
            </div>

            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Full Name</dt>
                <dd class="col-sm-8 fw-semibold">@Model.FullName</dd>

                <dt class="col-sm-4 text-muted">Phone Number</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4 text-muted">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4 text-muted">Address</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4 text-muted">Is Active</dt>
                <dd class="col-sm-8">@(Model.IsActive ? "Yes" : "No")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="CustomerID" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 fw-semibold">
                        <i class="align-middle me-1" data-feather="trash-2"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                        <i class="align-middle me-1" data-feather="x"></i> Cancel
                    </a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
