@model IMS.Application.DTOs.Warehouse.WarehouseReqDto

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 600px; margin: 0 auto;">

        <h3 class="fw-semibold mb-4" style="color: #6c707de6;">Edit Warehouse</h3>

        @* Success, Warning, Error Messages *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success small rounded-3 py-2 px-3" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning small rounded-3 py-2 px-3" role="alert">
                @TempData["WarningMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger small rounded-3 py-2 px-3" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        @* Validation Errors *@
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="text-danger small fw-semibold mb-3">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="WarehouseName" class="form-label">Warehouse Name</label>
                <input asp-for="WarehouseName" class="form-control rounded-3" placeholder="Enter warehouse name" />
                <span asp-validation-for="WarehouseName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control rounded-3" placeholder="Enter warehouse address" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ManagerID" class="form-label">Manager</label>
                <select asp-for="ManagerID" asp-items="ViewBag.Managers" class="form-select rounded-3">
                    <option value="">Select Manager</option>
                </select>
                <span asp-validation-for="ManagerID" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
