@model IMS.Application.DTOs.Warehouse.WarehouseResDto

@{
    ViewData["Title"] = "Delete Warehouse";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 700px; margin: 0 auto;">

        <h3 class="fw-semibold mb-4" style="color: #6c707de6;">Delete Warehouse</h3>
        <div class="alert small rounded-3 py-2 px-3 mb-4" style="background-color: #ffe5e5; color: #dc3545;" role="alert">
            <div class="d-flex align-items-center">
                <i class="align-middle me-2" data-feather="alert-triangle"></i>
                <div>
                    <strong>Warning:</strong> Are you sure you want to delete this warehouse? This action cannot be undone.
                </div>
            </div>
        </div>
        <dl class="row mb-0">
            <dt class="col-sm-4 text-muted">Warehouse Name</dt>
            <dd class="col-sm-8">@Model.WarehouseName</dd>

            <dt class="col-sm-4 text-muted">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4 text-muted">Manager</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ManagerName))
                {
                    <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary px-3 py-1">
                        @Model.ManagerName
                    </span>

                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="WarehouseID" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="trash-2"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="arrow-left"></i> Cancel
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
