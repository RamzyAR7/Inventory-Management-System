@model IMS.Application.DTOs.User.UserResDto

@{
    ViewData["Title"] = "User Details";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 700px; margin: 0 auto;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0" style="color: #6c707de6;">User Details</h3>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-warning rounded-pill px-3 fw-semibold">
                    <i class="align-middle me-1" data-feather="edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3 fw-semibold">
                    <i class="align-middle me-1" data-feather="arrow-left"></i> Back
                </a>
            </div>
        </div>
        <dl class="row mb-0">
            <dt class="col-sm-4 text-muted">Username</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4 text-muted">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 text-muted">Is Active</dt>
            <dd class="col-sm-8">
                @if (Model.IsActive)
                {
                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-1">
                        Active
                    </span>
                }
                else
                {
                    <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger px-3 py-1">
                        Inactive
                    </span>
                }

            <dt class="col-sm-4 text-muted">Role</dt>
            <dd class="col-sm-8">
                @if (Model.Role == "Admin")
                {
                    <span class="badge rounded-pill px-3 py-1" style="background-color: #ffe5e5; color: #dc3545;">
                        Admin
                    </span>
                }
                else if (Model.Role == "Manager")
                {
                    <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary px-3 py-1">
                        Manager
                    </span>
                }
                else
                {
                    <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary px-3 py-1">
                        Employee
                    </span>
                }
            </dd>


            <dt class="col-sm-4 text-muted">Created At</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-4 text-muted">Manager</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ManagerName))
                {
                    <span class="badge rounded-pill px-3 py-1 small" style="background-color: #f2f2f2; color: #6c757d;">
                        @Model.ManagerName
                    </span>
                }
                else
                {
                    <span class="badge rounded-pill px-3 py-1 small" style="background-color: #f8f9fa; color: #adb5bd;">
                        None
                    </span>
                }
            </dd>

        </dl>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
