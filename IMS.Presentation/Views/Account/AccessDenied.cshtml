@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Access Denied";
}

<div class="auth-card text-center">
    <div class="mb-4">
        <i class="fas fa-ban text-danger" style="font-size: 5rem;"></i>
    </div>
    <h1 class="text-danger mb-3">Access Denied</h1>
    <p class="lead text-muted mb-4">You don't have permission to access this resource.</p>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
        <i class="fas fa-home me-2"></i>Return to Home
    </a>
</div>

@section Styles {
    <style>
        .auth-card {
            background: #fff;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
    </style>
}
