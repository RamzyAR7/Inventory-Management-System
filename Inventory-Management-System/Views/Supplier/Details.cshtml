@model Inventory_Management_System.Entities.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 800px; margin: 0 auto;">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0" style="color: #6c707de6;">Supplier Details</h3>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.SupplierID" class="btn btn-warning rounded-pill px-3 fw-semibold">
                    <i class="align-middle me-1" data-feather="edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3 fw-semibold">
                    <i class="align-middle me-1" data-feather="arrow-left"></i> Back
                </a>
            </div>
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-4 text-muted">Supplier Name</dt>
            <dd class="col-sm-8">@Model.SupplierName</dd>

            <dt class="col-sm-4 text-muted">Phone Number</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4 text-muted">Email Address</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <div class="border-top pt-4">
            <h5 class="fw-semibold mb-3" style="color: #6c707de6;">Supplied Products</h5>

            <div class="table-responsive rounded-3 overflow-hidden">
                <table class="table align-middle mb-0">
                    <thead class="bg-light">
                        <tr style="color: #6c707de6;">
                            <th>Product Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SupplierProducts?.Any() == true)
                        {
                            foreach (var product in Model.SupplierProducts)
                            {
                                <tr>
                                    <td>@product.Product.ProductName</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-center text-muted py-4">No products available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
