@model Inventory_Management_System.Models.DTOs.Warehouse.WarehouseReqDto

@{
    ViewData["Title"] = "Create Warehouse";
}

<div class="warehouse-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Create New Warehouse</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="WarehouseName" class="form-control" placeholder=" " />
                            <label asp-for="WarehouseName"></label>
                            <span asp-validation-for="WarehouseName" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder=" " />
                            <label asp-for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="ManagerID" class="form-select" asp-items="ViewBag.Managers">
                                <option value="">Select Manager</option>
                            </select>
                            <label asp-for="ManagerID">Manager</label>
                            <span asp-validation-for="ManagerID" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="align-middle me-1" data-feather="save"></i> Create Warehouse
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .warehouse-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
        }
        .form-floating > label {
            padding: 0.5rem 0.75rem;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
