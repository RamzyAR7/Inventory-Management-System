@model Inventory_Management_System.Models.DTOs.Warehouse.WarehouseResDto

@{
    ViewData["Title"] = "Warehouse Details";
}

<div class="warehouse-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Warehouse Details</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Warehouse ID</dt>
                        <dd class="col-sm-8">@Model.WarehouseID</dd>

                        <dt class="col-sm-4 text-muted">Warehouse Name</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4 text-muted">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4 text-muted">Manager</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ManagerName))
                            {
                                <span class="badge bg-primary">@Model.ManagerName</span>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.WarehouseID" class="btn btn-warning">
                    <i class="align-middle me-1" data-feather="edit"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .warehouse-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
        }
        dt {
            font-weight: 500;
        }
        dd {
            padding: 8px 0;
        }
        .badge {
            font-weight: 500;
            padding: 5px 10px;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
