@model Inventory_Management_System.Models.DTOs.Warehouse.WarehouseResDto

@{
    ViewData["Title"] = "Warehouse Details";
}

<div class="warehouse-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Warehouse Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.WarehouseID" class="btn btn-warning">
                <i class="align-middle me-1" data-feather="edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="align-middle me-1" data-feather="arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="warehouse-details">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.WarehouseID)</dt>
            <dd class="col-sm-9">@Model.WarehouseID</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.WarehouseName)</dt>
            <dd class="col-sm-9">@Model.WarehouseName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Manager</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ManagerName))
                {
                    <span class="badge bg-primary">@Model.ManagerName</span>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>
        </dl>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
