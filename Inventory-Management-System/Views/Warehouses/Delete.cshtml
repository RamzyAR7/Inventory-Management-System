@model Inventory_Management_System.Entities.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this warehouse?</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Capacity:</strong> @Model.Capacity</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="WarehouseID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
