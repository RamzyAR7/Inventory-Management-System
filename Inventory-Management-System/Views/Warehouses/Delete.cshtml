@model Inventory_Management_System.Models.DTOs.Warehouse.WarehouseResDto

@{
    ViewData["Title"] = "Delete Warehouse";
}

<div class="warehouse-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Delete Warehouse</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this warehouse? This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Warehouse Name</dt>
                <dd class="col-sm-9">@Model.WarehouseName</dd>

                <dt class="col-sm-3 text-muted">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3 text-muted">Manager</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ManagerName))
                    {
                        <span class="badge bg-primary">@Model.ManagerName</span>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="WarehouseID" />
                <button type="submit" class="btn btn-danger">
                    <i class="align-middle me-1" data-feather="trash-2"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .warehouse-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
        }
        dt {
            font-weight: 500;
        }
        dd {
            padding: 8px 0;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
