@model IEnumerable<Inventory_Management_System.Models.DTOs.Warehouse.WarehouseResDto>

@{
    ViewData["Title"] = "Warehouses";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold" style="color: #6c707de6; font-size: 1.5rem;">Warehouses Management</h3>
            <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-semibold">
                <i class="align-middle me-2" data-feather="plus"></i> Create New
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="text-success small fw-semibold mb-3">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="text-danger small fw-semibold mb-3">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive rounded-3 overflow-hidden">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr style="color: #6c707de6;">
                        <th>@Html.DisplayNameFor(model => model.WarehouseName)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.ManagerName)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warehouse in Model)
                    {
                        <tr>
                            <td>@warehouse.WarehouseName</td>
                            <td>@warehouse.Address</td>
                            <td>
                                @if (!string.IsNullOrEmpty(warehouse.ManagerName))
                                {
                                    <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary px-3 py-1">@warehouse.ManagerName</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@warehouse.WarehouseID" class="btn btn-outline-primary btn-sm rounded-pill px-3 fw-semibold">
                                        <i class="align-middle me-1" data-feather="eye"></i> View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@warehouse.WarehouseID" class="btn btn-outline-warning btn-sm rounded-pill px-3 fw-semibold">
                                        <i class="align-middle me-1" data-feather="edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@warehouse.WarehouseID" class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-semibold">
                                        <i class="align-middle me-1" data-feather="trash-2"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
