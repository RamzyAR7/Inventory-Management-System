@model IEnumerable<Inventory_Management_System.Models.DTOs.Warehouse.WarehouseResDto>

@{
    ViewData["Title"] = "Warehouses";
}

<div class="warehouses-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Warehouses Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="align-middle me-1" data-feather="plus"></i> Create New
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.WarehouseName)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.ManagerName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var warehouse in Model)
                {
                    <tr>
                        <td>@warehouse.WarehouseName</td>
                        <td>@warehouse.Address</td>
                        <td>
                            @if (!string.IsNullOrEmpty(warehouse.ManagerName))
                            {
                                <span class="badge bg-primary">@warehouse.ManagerName</span>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@warehouse.WarehouseID" class="btn btn-info btn-sm" title="Details">
                                    <i class="align-middle" data-feather="eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@warehouse.WarehouseID" class="btn btn-warning btn-sm" title="Edit">
                                    <i class="align-middle" data-feather="edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@warehouse.WarehouseID" class="btn btn-danger btn-sm" title="Delete">
                                    <i class="align-middle" data-feather="trash-2"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .warehouses-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }
        
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .action-buttons {
            display: flex;
            gap: 5px;
        }
        
        .badge {
            font-weight: 500;
            padding: 5px 10px;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
