@model Inventory_Management_System.Models.DTOs.Products.ProductReqDto

@{
    ViewData["Title"] = "Edit Product";
}

<div class="product-form">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Edit Product</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductID" />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label"></label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductDescription" class="form-label"></label>
                    <textarea asp-for="ProductDescription" class="form-control" placeholder="Enter product description" rows="3"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RecoderLevel" class="form-label"></label>
                    <input asp-for="RecoderLevel" class="form-control" placeholder="Enter reorder level" />
                    <span asp-validation-for="RecoderLevel" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="CategoryID" class="form-label">Category</label>
                    <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-select">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="SuppliersIDs" class="form-label">Suppliers</label>
                    <select asp-for="SuppliersIDs" asp-items="ViewBag.Suppliers" class="form-select" multiple="multiple">
                        <option value="">Select Suppliers</option>
                    </select>
                    <span asp-validation-for="SuppliersIDs" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="align-middle me-1" data-feather="save"></i> Save Changes
            </button>
            <a asp-action="Details" asp-route-id="@Model.ProductID" class="btn btn-info">
                <i class="align-middle me-1" data-feather="eye"></i> View Details
            </a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .product-form {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        select[multiple] {
            min-height: 120px;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            feather.replace();

            // Initialize select2 for multiple select
            $('select[multiple]').select2({
                placeholder: "Select suppliers",
                allowClear: true
            });
        });
    </script>
}
