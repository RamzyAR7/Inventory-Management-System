@model Inventory_Management_System.Models.DTOs.User.UserResDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="users-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Delete User</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill d-flex align-items-center gap-2">
            <i data-feather="arrow-left"></i> Cancel
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-warning rounded-4">
        <h4 class="alert-heading d-flex align-items-center gap-2">
            <i data-feather="alert-triangle"></i> Warning!
        </h4>
        <p class="mb-0">Are you sure you want to delete this user? This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4 mt-4">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
            <dd class="col-sm-9">
                <span class="badge rounded-pill
                    @(Model.Role == "Admin" ? "bg-danger-subtle text-danger-emphasis" :
                      Model.Role == "Manager" ? "bg-primary-subtle text-primary-emphasis" :
                      "bg-secondary-subtle text-secondary-emphasis")">
                    @Model.Role
                </span>
            </dd>

            <dt class="col-sm-3">Manager</dt>
            <dd class="col-sm-9">@(Model.ManagerName ?? "None")</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="UserID" />
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-outline-danger rounded-pill d-flex align-items-center gap-2">
                <i data-feather="trash-2"></i> Confirm Delete
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
