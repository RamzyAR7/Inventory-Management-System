@model Inventory_Management_System.Models.DTOs.User.UserResDto

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Role)</dt>
        <dd class="col-sm-10">@Model.Role</dd>
        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@(Model.ManagerName ?? "None")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>