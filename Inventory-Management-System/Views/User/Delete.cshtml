@model Inventory_Management_System.Models.DTOs.User.UserResDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="users-container">
    <h1 class="h3 mb-4">Delete User</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-warning">
        <h4 class="alert-heading"><i class="align-middle me-1" data-feather="alert-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
    </div>

    <div class="user-details">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
            <dd class="col-sm-9">
                <span class="badge 
                    @(Model.Role == "Admin" ? "bg-danger" : 
                      Model.Role == "Manager" ? "bg-primary" : "bg-secondary")">
                    @Model.Role
                </span>
            </dd>

            <dt class="col-sm-3">Manager</dt>
            <dd class="col-sm-9">@(Model.ManagerName ?? "None")</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="UserID" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">
                <i class="align-middle me-1" data-feather="trash-2"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="align-middle me-1" data-feather="arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
