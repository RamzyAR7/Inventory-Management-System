@model Inventory_Management_System.Models.DTOs.User.UserResDto

@{
    ViewData["Title"] = "User Details";
}

<div class="users-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">User Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.UserID"
               class="btn btn-outline-warning rounded-pill d-flex align-items-center gap-2">
                <i data-feather="edit"></i> Edit
            </a>
            <a asp-action="Index"
               class="btn btn-outline-secondary rounded-pill d-flex align-items-center gap-2">
                <i data-feather="arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-4 p-4">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
            <dd class="col-sm-9">
                <span class="badge rounded-pill
                    @(Model.Role == "Admin" ? "bg-danger-subtle text-danger-emphasis" :
                      Model.Role == "Manager" ? "bg-primary-subtle text-primary-emphasis" :
                      "bg-secondary-subtle text-secondary-emphasis")">
                    @Model.Role
                </span>
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-3">Manager</dt>
            <dd class="col-sm-9">@(Model.ManagerName ?? "None")</dd>
        </dl>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
