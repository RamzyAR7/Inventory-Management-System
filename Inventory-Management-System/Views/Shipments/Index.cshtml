@using Inventory_Management_System.Entities
@model IEnumerable<Inventory_Management_System.Entities.Shipment>

@{
    ViewData["Title"] = "Shipments";
}

<h1 class="h3 mb-3">Shipments</h1>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Shipment ID</th>
                    <th>Date</th>
                    <th>Carrier</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipment in Model)
                {
                    <tr>
                        <td>@shipment.ShipmentID</td>
                        <td>@shipment.ShipmentDate.ToString("MMMM dd, yyyy")</td>
                        <td>@shipment.Carrier</td>
                        <td>
                            @if (shipment.Status == ShipmentStatus.Delivered)
                            {
                                <span class="badge bg-success">Delivered</span>
                            }
                            else if (shipment.Status == ShipmentStatus.InTransit)
                            {
                                <span class="badge bg-info">In Transit</span>
                            }
                            else if (shipment.Status == ShipmentStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@shipment.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
