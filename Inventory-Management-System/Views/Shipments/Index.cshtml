@model dynamic
@{
    ViewData["Title"] = "Shipments";
    var shipments = ViewBag.Shipments as IEnumerable<Inventory_Management_System.Entities.Shipment>;
    int totalCount = (int)ViewBag.TotalCount;
    int pageNumber = (int)ViewBag.PageNumber;
    int pageSize = (int)ViewBag.PageSize;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<h2>Shipments</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Shipment ID</th>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Warehouse</th>
            <th>Tracking Number</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Item Count</th>
            <th>Shipped Date</th>
            <th>Delivery Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (shipments != null && shipments.Any())
        {
            @foreach (var shipment in shipments)
            {
                <tr>
                    <td>@shipment.ShipmentID</td>
                    <td>@shipment.OrderID</td>
                    <td>@(shipment.Order?.Customer?.FullName ?? "N/A")</td>
                    <td>@(shipment.Order?.Warehouse?.WarehouseName ?? "N/A")</td>
                    <td>@shipment.TrackingNumber</td>
                    <td>@shipment.Destination</td>
                    <td>@shipment.Status</td>
                    <td>@shipment.ItemCount</td>
                    <td>@(shipment.ShippedDate?.ToString("g") ?? "N/A")</td>
                    <td>@(shipment.DeliveryDate?.ToString("g") ?? "N/A")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@shipment.ShipmentID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@shipment.ShipmentID" class="btn btn-primary btn-sm">Edit</a>
                        @if (shipment.Status == ShipmentStatus.Cancelled)
                        {
                            <form asp-action="Delete" asp-route-id="@shipment.ShipmentID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this shipment?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center">No shipments found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
    </ul>
</nav>

<div class="mt-3">
    <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>
</div>
