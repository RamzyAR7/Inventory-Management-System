@model Inventory_Management_System.Entities.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order Details</h2>

<div><strong>ID:</strong> @Model.OrderID</div>
<div><strong>Date:</strong> @Model.OrderDate.ToShortDateString()</div>
<div><strong>Status:</strong> @Model.Status</div>
<div><strong>Total:</strong> @Model.TotalAmount</div>

<a class="btn btn-secondary mt-3" href="@Url.Action("Index")">Back to List</a>
