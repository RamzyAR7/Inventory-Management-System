@model Inventory_Management_System.Entities.Order

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this order?</h2>

<div><strong>ID:</strong> @Model.OrderID</div>
<div><strong>Date:</strong> @Model.OrderDate.ToShortDateString()</div>
<div><strong>Status:</strong> @Model.Status</div>
<div><strong>Total:</strong> @Model.TotalAmount</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="OrderID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
