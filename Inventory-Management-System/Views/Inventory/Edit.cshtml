@model Inventory_Management_System.Models.DTOs.InventoryDto

@{
    ViewData["Title"] = "Edit Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Edit Inventory Item</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="WarehouseName" class="form-label">Warehouse</label>
        <input asp-for="WarehouseName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
