@model Inventory_Management_System.Entities.InventoryTransaction

@{
    ViewData["Title"] = "Delete Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this transaction?</h2>

<p><strong>Type:</strong> @Model.Type</p>
<p><strong>Quantity:</strong> @Model.Quantity</p>
<p><strong>Date:</strong> @Model.TransactionDate.ToShortDateString()</p>
<p><strong>Reference:</strong> @Model.Reference</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TransactionID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
