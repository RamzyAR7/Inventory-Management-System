@model Inventory_Management_System.Entities.InventoryTransaction

@{
    ViewData["Title"] = "Edit Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Inventory Transaction</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TransactionID" />

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TransactionDate" class="form-label"></label>
        <input asp-for="TransactionDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
</form>
