@model IEnumerable<Inventory_Management_System.Entities.InventoryTransaction>

@{
    ViewData["Title"] = "Inventory Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inventory Transactions</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("Create")">Add Transaction</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Reference</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransactionID</td>
                <td>@t.Type</td>
                <td>@t.Quantity</td>
                <td>@t.TransactionDate.ToShortDateString()</td>
                <td>@t.Reference</td>
                <td>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = t.TransactionID })">Details</a>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = t.TransactionID })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = t.TransactionID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
