@model Inventory_Management_System.Models.DTOs.Customer.CustomerReqDto

@{
    ViewData["Title"] = "Create Customer";
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn" style="max-width: 700px; margin: 0 auto;">
        <h3 class="fw-semibold mb-4 text-primary">
            <i data-feather="user-plus" class="me-2" style="width: 24px; height: 24px;"></i> Create New Customer
        </h3>

        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
        {
            <div class="text-danger small fw-semibold mb-3">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control rounded-3" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control rounded-3" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control rounded-3" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control rounded-3" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IsActive" class="form-label">Is Active</label>
                <select asp-for="IsActive" class="form-select rounded-3">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="save"></i> Create Customer
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                    <i class="align-middle me-1" data-feather="x"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
