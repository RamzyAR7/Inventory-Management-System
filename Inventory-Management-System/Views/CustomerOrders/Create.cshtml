@model Inventory_Management_System.Entities.CustomerOrder

@{
    ViewData["Title"] = "Create Customer Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Customer Order</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="OrderDate" class="form-label"></label>
        <input asp-for="OrderDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input asp-for="TotalAmount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
