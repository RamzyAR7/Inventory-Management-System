@model Inventory_Management_System.Entities.CustomerOrder

@{
    ViewData["Title"] = "Delete Customer Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this customer order?</h2>

<p><strong>Customer:</strong> @Model.CustomerName</p>
<p><strong>Date:</strong> @Model.OrderDate.ToShortDateString()</p>
<p><strong>Total:</strong> @Model.TotalAmount</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CustomerOrderID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
