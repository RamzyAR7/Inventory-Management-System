@model IEnumerable<IMS.Data.Entities.DeliveryMan>
@using IMS.Data.Entities

@{
    ViewData["Title"] = "Delivery Men";
    int totalCount = (int)ViewBag.TotalCount;
    int pageNumber = (int)ViewBag.PageNumber;
    int pageSize = (int)ViewBag.PageSize;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="container py-4">
    <div class="bg-white p-4 rounded-4 shadow-sm animate__animated animate__fadeIn">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-semibold mb-0 text-primary d-flex align-items-center" style="font-size: 1.5rem;">
                <i class="fas fa-motorcycle align-middle me-2" style="font-size: 1.6rem;"></i> Delivery Men Management
            </h3>
            <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-3 fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show small" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="table-responsive rounded-3 overflow-hidden">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr style="color: #6c707de6;">
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Is Active</th>
                        <th>Manager</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int i = 1 + (pageNumber - 1) * pageSize;
                        foreach (var deliveryMan in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@deliveryMan.FullName</td>
                                <td>@deliveryMan.PhoneNumber</td>
                                <td>@deliveryMan.Email</td>
                                <td>
                                    <span class="badge @(deliveryMan.Status == DeliveryManStatus.Busy ? "bg-danger" : "bg-success") text-white rounded-pill px-3">
                                        @deliveryMan.Status
                                    </span>
                                </td>
                                <td>@(deliveryMan.IsActive ? "Yes" : "No")</td>
                                <td>@(deliveryMan.Manager?.UserName ?? "Not Assigned")</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@deliveryMan.DeliveryManID"
                                           class="btn btn-outline-info btn-sm rounded-pill px-3 fw-semibold" title="View Details">
                                            <i class="bi bi-eye me-1"></i> View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@deliveryMan.DeliveryManID"
                                           class="btn btn-outline-warning btn-sm rounded-pill px-3 fw-semibold" title="Edit">
                                            <i class="bi bi-pencil-square me-1"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@deliveryMan.DeliveryManID"
                                           class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-semibold" title="Delete">
                                            <i class="bi bi-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>

                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-box-seam fs-4 mb-2"></i>
                                <p class="mb-0">No delivery men found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(pageNumber - 1)"
                           asp-route-pageSize="@pageSize">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == pageNumber ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="@pageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(pageNumber + 1)"
                           asp-route-pageSize="@pageSize">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        .fw-semibold {
            font-weight: 600;
        }

        .text-primary {
            color: #608fc8 !important;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
}
