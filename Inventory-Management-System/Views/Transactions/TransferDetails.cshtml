@model Inventory_Management_System.Entities.WarehouseTransfers
@{
    ViewData["Title"] = "Transfer Details";
}

<h2>Transfer Details</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Transfer ID</dt>
            <dd class="col-sm-9">@Model.WarehouseTransferID</dd>

            <dt class="col-sm-3">From Warehouse</dt>
            <dd class="col-sm-9">@Model.FromWarehouse?.WarehouseName</dd>

            <dt class="col-sm-3">FromProduct</dt>
            <dd class="col-sm-9">@Model.FromProduct?.ProductName</dd>

            <dt class="col-sm-3">To Warehouse</dt>
            <dd class="col-sm-9">@Model.ToWarehouse?.WarehouseName</dd>

            <dt class="col-sm-3">ToProduct</dt>
            <dd class="col-sm-9">@Model.ToProduct?.ProductName</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.TransferDate.ToString("g")</dd>

            <dt class="col-sm-3">Out Transaction ID</dt>
            <dd class="col-sm-9">
                <a asp-action="TransactionDetails" asp-route-id="@Model.OutTransactionID">@Model.OutTransactionID</a>
            </dd>

            <dt class="col-sm-3">In Transaction ID</dt>
            <dd class="col-sm-9">
                <a asp-action="TransactionDetails" asp-route-id="@Model.InTransactionID">@Model.InTransactionID</a>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    <a asp-action="ListTransfers" class="btn btn-secondary">Back to Transfers</a>
</div>
