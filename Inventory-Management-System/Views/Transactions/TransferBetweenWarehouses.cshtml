@model Inventory_Management_System.Models.DTOs.InventoryTransaction.CreateWarehouseTransferDto
@{
    ViewData["Title"] = "Transfer Between Warehouses";
}

<h2>Transfer Between Warehouses</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="TransferBetweenWarehouses" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FromWarehouseId">From Warehouse</label>
        <select asp-for="FromWarehouseId" asp-items="ViewBag.Warehouses" class="form-control" onchange="this.form.submit()"></select>
        <span asp-validation-for="FromWarehouseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToWarehouseId">To Warehouse</label>
        <select asp-for="ToWarehouseId" asp-items="ViewBag.ToWarehouses" class="form-control"></select>
        <span asp-validation-for="ToWarehouseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Transfer</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
