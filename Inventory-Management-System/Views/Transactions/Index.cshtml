@model IEnumerable<Inventory_Management_System.Entities.InventoryTransaction>
@{
    ViewData["Title"] = "Transactions Dashboard";
    var transfers = ViewBag.Transfers as IEnumerable<Inventory_Management_System.Entities.WarehouseTransfers>;
    int totalCount = (int)ViewBag.TotalCount;
    int pageNumber = (int)ViewBag.PageNumber;
    int pageSize = (int)ViewBag.PageSize;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<h2>Transactions Dashboard</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Filter by Warehouse -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="form-group">
        <label for="warehouseId">Filter by Warehouse</label>
        <select name="warehouseId" id="warehouseId" asp-items="ViewBag.Warehouses" class="form-control" onchange="this.form.submit()">
            <option value="">All Warehouses</option>
        </select>
        <input type="hidden" name="pageNumber" value="1" />
    </div>
</form>

<!-- In/Out Transactions -->
<h3>In/Out Transactions</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Type</th>
            <th>Product</th>
            <th>Warehouse</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionID</td>
                    <td>@transaction.Type</td>
                    <td>@transaction.Product.ProductName</td>
                    <td>@transaction.Warehouse.WarehouseName</td>
                    <td>@transaction.Quantity</td>
                    <td>@transaction.TransactionDate.ToString("g")</td>
                    <td>
                        <a asp-action="TransactionDetails" asp-route-id="@transaction.TransactionID" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No transactions found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination for Transactions -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-warehouseId="@ViewBag.WarehouseId" asp-route-pageNumber="@i">@i</a>
            </li>
        }
    </ul>
</nav>

<!-- Warehouse Transfers -->
<h3>Warehouse Transfers</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transfer ID</th>
            <th>Product</th>
            <th>From Warehouse</th>
            <th>To Warehouse</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (transfers.Any())
        {
            @foreach (var transfer in transfers)
            {
                <tr>
                    <td>@transfer.WarehouseTransferID</td>
                    <td>@transfer.Product.ProductName</td>
                    <td>@transfer.FromWarehouse.WarehouseName</td>
                    <td>@transfer.ToWarehouse.WarehouseName</td>
                    <td>@transfer.Quantity</td>
                    <td>@transfer.TransferDate.ToString("g")</td>
                    <td>
                        <a asp-action="TransferDetails" asp-route-id="@transfer.WarehouseTransferID" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No transfers found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="CreateInOrOutTransaction" class="btn btn-primary">Create In/Out Transaction</a>
    <a asp-action="TransferBetweenWarehouses" class="btn btn-primary">Create Transfer</a>
</div>
