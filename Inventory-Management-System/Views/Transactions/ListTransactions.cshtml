@model dynamic
@{
    ViewData["Title"] = "In/Out Transactions";
    var supplierInTransactions = ViewBag.SupplierInTransactions as IEnumerable<IMS.Data.Entities.InventoryTransaction>;
    var customerOutTransactions = ViewBag.CustomerOutTransactions as IEnumerable<IMS.Data.Entities.InventoryTransaction>;
    int totalCount = (int)ViewBag.TotalCount;
    int pageNumber = (int)ViewBag.PageNumber;
    int pageSize = (int)ViewBag.PageSize;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<h2>In/Out Transactions</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="ListTransactions" method="get" class="mb-4">
    <div class="form-group">
        <label for="warehouseId">Filter by Warehouse</label>
        <select name="warehouseId" id="warehouseId" asp-items="ViewBag.Warehouses" class="form-control" onchange="this.form.submit()">
            <option value="">All Warehouses</option>
        </select>
        <input type="hidden" name="pageNumber" value="1" />
    </div>
</form>

<!-- In Transactions (From Suppliers) -->
<h3>In Transactions (From Suppliers)</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Supplier</th>
            <th>Product</th>
            <th>Warehouse</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (supplierInTransactions != null && supplierInTransactions.Any())
        {
            @foreach (var transaction in supplierInTransactions)
            {
                <tr>
                    <td>@transaction.TransactionID</td>
                    <td>@(transaction.Suppliers?.SupplierName ?? "N/A")</td>
                    <td>@transaction.Product.ProductName</td>
                    <td>@transaction.Warehouse.WarehouseName</td>
                    <td>@transaction.Quantity</td>
                    <td>@transaction.TransactionDate.ToString("g")</td>
                    <td>
                        <a asp-action="TransactionDetails" asp-route-id="@transaction.TransactionID" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No supplier In transactions found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Out Transactions (To Customers) -->
<h3>Out Transactions (To Customers)</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Warehouse</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (customerOutTransactions != null && customerOutTransactions.Any())
        {
            @foreach (var transaction in customerOutTransactions)
            {
                <tr>
                    <td>@transaction.TransactionID</td>
                    <td>@(transaction.Order?.Customer?.FullName ?? "N/A")</td>
                    <td>@transaction.Product.ProductName</td>
                    <td>@transaction.Warehouse.WarehouseName</td>
                    <td>@transaction.Quantity</td>
                    <td>@transaction.TransactionDate.ToString("g")</td>
                    <td>
                        <a asp-action="TransactionDetails" asp-route-id="@transaction.TransactionID" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No customer Out transactions found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="ListTransactions" asp-route-warehouseId="@ViewBag.WarehouseId" asp-route-pageNumber="@i">@i</a>
            </li>
        }
    </ul>
</nav>

<div class="mt-3">
    <a asp-action="CreateInTransaction" class="btn btn-primary">Create In Transaction</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>

