@model IEnumerable<Inventory_Management_System.Entities.InventoryTransaction>
@using System.ComponentModel.DataAnnotations
@{
    ViewData["Title"] = "In/Out Transactions";
    int totalCount = (int)ViewBag.TotalCount;
    int pageNumber = (int)ViewBag.PageNumber;
    int pageSize = (int)ViewBag.PageSize;
    int totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="bg-white rounded-4 shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold mb-0 text-primary">
            <i data-feather="repeat" class="me-2" style="width: 22px; height: 22px;"></i> In/Out Transactions
        </h3>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-semibold px-4">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success rounded-3 small py-2 px-3 mb-3">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger rounded-3 small py-2 px-3 mb-3">@TempData["ErrorMessage"]</div>
    }
    <form asp-action="ListTransactions" method="get" class="mb-4">
        <label class="form-label fw-semibold d-flex align-items-center gap-2" for="warehouseId">
            <i data-feather="filter"></i> Filter by Warehouse
        </label>
        <select name="warehouseId" id="warehouseId" asp-items="ViewBag.Warehouses"
                class="form-select w-auto d-inline-block" onchange="this.form.submit()">
            <option value="">All Warehouses</option>
        </select>
        <input type="hidden" name="pageNumber" value="1" />
    </form>


    <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Transaction ID</th>
                    <th>Type</th>
                    <th>Product</th>
                    <th>Warehouse</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.TransactionID</td>
                            <td>
                                <span class="badge @(t.Type.ToString() == "IN" ? "bg-success-subtle text-success-emphasis" : "bg-danger-subtle text-danger-emphasis")">
                                    @t.Type
                                </span>
                            </td>
                            <td>@t.Product.ProductName</td>
                            <td>@t.Warehouse.WarehouseName</td>
                            <td>@t.Quantity</td>
                            <td>@t.TransactionDate.ToString("g")</td>
                            <td>
                                <a asp-action="TransactionDetails" asp-route-id="@t.TransactionID" class="btn btn-sm btn-outline-info rounded-pill px-3">
                                    <i data-feather="eye" class="me-1"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No transactions found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" asp-action="ListTransactions" asp-route-warehouseId="@ViewBag.WarehouseId" asp-route-pageNumber="@i">@i</a>
                </li>
            }
        </ul>
    </nav>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="CreateInOrOutTransaction" class="btn btn-primary rounded-pill px-4 fw-semibold">
            <i data-feather="plus"></i> Create In/Out Transaction
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>
}
